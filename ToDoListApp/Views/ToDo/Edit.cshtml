@model ToDoListApp.Models.ToDoItem

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>
    <div class="form-group">
        <label for="IsCompleted">Completed</label>
        <input type="checkbox" id="IsCompleted" name="IsCompleted" @(Model.IsCompleted ? "checked" : "") />
    </div>
    <div class="form-group">
        <label for="DueDate">Due Date</label>
        <input type="date" id="DueDate" name="DueDate" class="form-control" value="@Model.DueDate?.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
