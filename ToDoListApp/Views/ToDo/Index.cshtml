@model IEnumerable<ToDoListApp.Models.ToDoItem>

<h2>To-Do List</h2>

<p>
    <a href="@Url.Action("Create", "ToDo")">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@(item.IsCompleted ? "Completed" : "Pending")</td>
                <td>
                    <input type="checkbox" class="mark-completed"
                           data-id="@item.Id"
                    @(item.IsCompleted ? "checked" : "") />
                </td>
                <td>@item.DueDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


   @section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.mark-completed').forEach(function (checkbox) {
                checkbox.addEventListener('change', function () {
                    var id = this.getAttribute('data-id');
                    var isCompleted = this.checked;

                    // Call the controller to update the task status
                    fetch(`/ToDo/MarkCompleted/${id}?isCompleted=${isCompleted}`, {
                        method: 'POST'
                    })
                        .then(response => {
                            if (response.ok) {
                                alert('Task status updated');
                            }
                        });
                });
            });
        });
    </script>
}

}
